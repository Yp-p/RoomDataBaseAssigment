<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ADD PRODUCT"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:id="@+id/btndeleteAll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnAdd"
        android:text="DELETE ALL PRODUCT"/>
    <Button
        android:id="@+id/deleteById"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete By ID"
        app:layout_constraintTop_toBottomOf="@id/btndeleteAll"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <Button
        android:id="@+id/btnMainGetName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GET BY NAME"
        app:layout_constraintTop_toBottomOf="@id/deleteById"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnMainGetName"/>



</androidx.constraintlayout.widget.ConstraintLayout>